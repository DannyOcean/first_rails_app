%h1 Update Task
.row
  .span6.offset4
    = form_for @task, url: user_project_task_path, method: :put do |f|
      = f.label :name
      = f.text_field :name
      = f.label :status
      = f.text_field :status
      = f.label :priority
      = f.text_field :priority
      %p #{f.submit "Save", class: "btn btn-medium btn-primary"}