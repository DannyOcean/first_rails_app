%h1 New Task
.row
  .span6.offset4
    = form_for @task, url: user_project_tasks_path do |f|
      = f.label :name
      = f.text_field :name, placeholder: "Type here name of task"
      = f.label :priority
      = f.text_field :priority, placeholder: "Enter integer number from 1 til 3"
      %p #{f.submit "Create", class: "btn btn-medium btn-primary"}