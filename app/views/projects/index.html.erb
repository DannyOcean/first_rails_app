<div class="row">
    <div class="span6 offset3">
        <h2>Projects</h2>

        <% if @projects.blank? %>
            <b>There is no projects</b>
        <% else %>
            <table>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                </tr>
                <% @projects.each do |i| %>
                    <tr>
                        <td><%= i.id %></td>
                        <td><%= link_to i.name, user_path(i)%></td>
                        <td><%= link_to "Edit", user_path(i), method: :put %></td>
                        <td><%= link_to "Delete", user_path(i), method: :delete, data: { confirm: "Are you sure?"} %></td>
                    </tr>
                <% end %>
        <% end %>
    </div>
</div>
